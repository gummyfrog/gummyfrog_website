doctype
html
	head
		include richembed.jade
		title= title
		link(rel='stylesheet', href='/stylesheets/cartesian.css')
		script(src='https://kit.fontawesome.com/a9b1673cea.js')
		script(src='javascripts/palette.js')
		script(src='javascripts/cartesianDisplayer.js')

	body
		div.header
			div#snackbar something
			div.content
				// img.logo(src="images/auditype_final.png")
				form()#form
					h2 What ad spots have you not sold yet?
					.input-container.label
						i.icon.label
						h2.input-field Full Pages
						h2.input-field Five Columns
						h2.input-field Four Columns
						h2.input-field Three Columns
					.input-container
						i.fab.fa-leanpub.icon
						input.input-field(type='number', min="0", max="5", placeholder='Full Pages')#full
						input.input-field(type='number', min="0", max="5", placeholder='Five Columns')#five
						input.input-field(type='number', min="0", max="5", placeholder='Four Columns')#four
						input.input-field(type='number', min="0", max="5", placeholder='Three Columns')#three


					.input-container.label
						i.icon.label
						h2.input-field Two ½ Wide
						h2.input-field Two ½ Square
						h2.input-field Two Columns
					.input-container
						i.fas.fa-columns.icon
						input.input-field(type='number', min="0", max="5", placeholder='Two ½ Wide')#twohw
						input.input-field(type='number', min="0", max="5", placeholder='Two ½ Square')#twohs
						input.input-field(type='number', min="0", max="5", placeholder='Two Columns')#two


					.input-container.label
						i.icon.label
						h2.input-field Break Even Cost

					.input-container
						i.fas.fa-coins.icon
						input.input-field(type='number', min="0", max="1000000", placeholder='Break Even Cost')#lower

					button.btn(type='button')#calculate Calculate

				script(src='javascripts/cartesian.js')
				div.tableDiv
					h3 You can break even by selling at any rate combination from this table:
					table.cartesianTable#jsonDisplay

